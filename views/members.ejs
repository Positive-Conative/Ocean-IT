<%include includes/header.ejs%>
<section id="two" class="wrapper style1 special">
    <div class="row uniform">
        <div class="1u 12u$(xsmall)"></div>
        <div class="2u 12u$(xsmall)">
            <div class="table-wrapper">
                <table class="alt">
                    <tbody style="text-align: center;">
                        <tr style="cursor: pointer" onclick="location.href='/introduction?data=1'" >
                            <td>인사말<span style="float:right;">></span></td>
                        </tr>
                        <tr style="cursor: pointer" onclick="location.href='/introduction?data=2'" >
                            <td>연혁<span style="float:right;">></span></td>
                        </tr>
                        <tr style="cursor: pointer" onclick="location.href='/introduction?data=3'" >
                            <td>조직도<span style="float:right;">></span></td>
                        </tr>
                        <tr style="cursor: pointer" onclick="location.href='/members'" >
                            <td>연구인력<span style="float:right;">></span></td>
                        </tr>
                        <tr style="cursor: pointer" onclick="location.href='https:www.hoseo.ac.kr/Home/Contents.mbz?action=MAPP_1708220056'">
                            <td><%= __('introduction_direction')%><span style="float:right;">></span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <% var count=0; %>
        <div class="8u 12u$(xsmall)">
            <div class="inner">
                <header>
                    <h2><%= __('index_h2_members')%></h2>
                    <p><%= __('index_p_members_summary')%></p>
                </header>
                <div class="flex flex-4">
                    <% var temp="" %>
                    <%for(var i=0; i<members_table.length;i++) {%>
                        <%count++%>                    
                        <%var row = members_table[i]
                            if(row === undefined) continue;
                        %>
                        <%if(temp != row.position){%>
                            <%if(count%4==1){%>
                                <div class="box person" style="border:0 solid black"></div>
                                <div class="box person" style="border:0 solid black"></div>
                                <div class="box person" style="border:0 solid black"></div>
                            <%}else if(count%4==2){%>
                                <div class="box person" style="border:0 solid black"></div>
                                <div class="box person" style="border:0 solid black"></div>
                            <%}else if(count%4==3){%>
                                <div class="box person" style="border:0 solid black"></div>
                            <%}%>

                            <%temp=row.position; count=0;%>
                            <h3 style="width: 100%; margin-bottom:30px "><%=row.position%></h3>
                        <%}%>
                    <div class="box person" onblur="true">
                        <div class="image round">
                            <img width="100%" src="images/members/<%=row.profile_img%>" alt="Member <%=row.mid+1%>" />
                        </div>
                        <%if(tran_value=='ko'){%>
                            <td><%=row.name_ko%></td>
                        <%}else{%>
                            <td><%=row.name_en%></td>
                        <%}%>
                        <p><%=row.affiliation%></p>
                        <div>
                            <%if(row.position != '박사과정' && row.position != '석사과정'){%>
                                <a class="button special fit icon fa-info-circle" style="text-align: center" onclick="window.open('/members/member_detail/<%=row.mid%>', '상세 정보', 'width = 600, height = 800 resizable=no scrollbars=yes')">More</a>
                            <%}else{%>
                                Email : <%=row.email%>
                            <%}%>
                        </div>
                        <div id="del_member">
                          <%if(cpt){%>
                            <a href="javascript:" class="button special fit icon fa-eye-slash" style="text-align: center" onclick="if(confirm('멤버를 삭제하시겠습니까?'))location.href='members/delete_member/<%=row.mid%>'">멤버 삭제</a>
                            <!-- 후에 관리자 계정인지 확인 후 쿠키 값 전송하도록 수정해야함 -->
                            <%}%>
                        </div>
                    </div>
                    <%}%>
                </div>
            </div>
        
            <ul class="actions fit" id="goto_write_page">
                <li style="display: inline-block">
                    <a href="" class="button fit icon fa-user-plus" onclick="window.open('/members/registration_member', '멤버 등록', 'width = 600, height = 800 resizable=no scrollbars=yes')"><%= __('members_register')%></a>
                </li>
            </ul>
        </div>
    </div>


</section>
<%include includes/footer.ejs%>
<script>
    <%if(cpt){%>
      goto_write_page.style.visibility = "visible";
    <%}else{%>
      goto_write_page.style.visibility = "hidden";
    <%}%>

</script>
