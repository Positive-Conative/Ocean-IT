                <img width="100%" src="/images/introduction/주요 연혁.png"/>
                <div class="table-wrapper">
                    <table class="alt">
                        <thead>
                            <tr>
                                <th><%- __('info_table_head1')%></th>
                                <th><%- __('info_table_head2')%></th>
                                <th><%- __('info_table_head3')%></th>
                            </tr>
                        </thead>
                        <tbody>
                            <%for(var i=0; i<intro_data.length; i++){%>
