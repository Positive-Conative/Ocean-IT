<script type="text/javascript">
    function submit_popup() {
        if(
            __checkNull(document.getElementById('r_date_start').value)&&
            __checkNull(document.getElementById('r_date_end').value)&&
            __checkNull(document.getElementById('research_name_ko').value)&&
            __checkNull(document.getElementById('research_name_en').value)&&
            __checkNull(document.getElementById('business_name_ko').value)&&
            __checkNull(document.getElementById('business_name_en').value)&&
            __checkNull(document.getElementById('department_name_ko').value)&&
            __checkNull(document.getElementById('department_name_en').value)&&
            __checkNull(document.getElementById('subjectivity_organization_ko').value)&&
            __checkNull(document.getElementById('subjectivity_organization_en').value)&&
            __checkNull(document.getElementById('support_organization_ko').value)&&
            __checkNull(document.getElementById('support_organization_en').value)&&
            __checkNull(document.getElementById('participation_organization_ko').value)&&
            __checkNull(document.getElementById('participation_organization_en').value)&&
            __checkNull(document.getElementById('research_charge_ko').value)&&
            __checkNull(document.getElementById('research_charge_en').value)&&
            __checkNull(document.getElementById('research_charge_belong_ko').value)&&
            __checkNull(document.getElementById('research_charge_belong_en').value)
        ){
            if(confirm("작성하시겠습니까?") === true){
                document.getElementById('form_submit').submit();
                alert("등록되었습니다");
            }else{
                return false;
            }
        }else{
            alert("작성 사항을 모두 기입해주세요.");
        }

    }
    function __checkNull(value) {
        if(value.replace(/^\s*/,'') === ''){
            return false;
        }else{
            return true;
        }
    }
</script>