<%include includes/header.ejs%>
<%var row = field[0];%>
<section id="main" class="wrapper">
    <div class="inner">
        <header class="align-center">
            <h2><%= __('question_board_title')%></h2>
            <p><%= __('question_board_subtitle')%></p>
        </header>
        <hr class="major"/>
        <h3 class="align-center"></h3>
        <div class="table-wrapper">
            <table class="align-center">
                <thead>
                <div class="table-wrapper">
                    <table class="alt">
                        <tbody class="align-center">
                        <tr>
                            <td><%= __('question_board_detail_date')%></td>
                            <td class="align-left"><%= row.date%></td>
                            <td><%= __('question_board_detail_hits')%></td>
                            <td class="align-left"><%=row.hits%></td>
                        </tr>
                        <tr>
                            <td><%= __('question_board_detail_writer')%></td>
                            <td class="align-left"><%= row.writer%></td>
                            <td><%= __('question_board_detail_title')%></td>
                            <td class="align-left"><%= row.title%></td>
                        </tr>
                        <tr>
                            <td ><%= __('question_board_detail_content')%></td>
                            <td colspan="4" class="align-left"><%= row.contents%></td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="table-wrapper">
                    <table class="alt">
                        <tbody class="align-center">
                        <tr>
                            <td><%= __('question_board_detail_coment_date')%></td>
                            <td class="align-left">
                                <%if(row.coments_date){%>
                                <%=row.coments_date%>
                                <%}else{%>
                                    -
                                <%}%>
                            </td>
                        </tr>
                        <tr>
                            <td><%= __('question_board_detail_comnet_content')%></td>
                            <td class="align-left">
                                <%if(row.coments){%>
                                    <%=row.coments%>
                                <%}else{%>
                                    코멘트가 없습니다.
                                <%}%>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <div style="float:right">
                    <a href="/question_board/page/1" class="button">목록</a>
                </div>
                </thead>
            </table>
            <div style="float:left; margin-right:15px" id="commentz">
                <a href="/question_board/coment/<%= row.qid%>" class="button special"><%=__('research_fields_create')%></a>
            </div>
            <form id="form_submit" method="post">
                <span style="float:right; margin-right:15px" id="u_del">
                    <input type="button" class="button" value="삭제하기" onclick="
                    if(confirm('삭제하시겠습니까?') === true){
                        document.getElementById('form_submit').submit();
                        alert('삭제되었습니다.');
                    }else{
                    return false;
                    }"/>
                </span>
                <div style="float:right; margin-right:15px" id="u_alt">
                    <a href="/question_board/write/<%= row.qid%>" class="button special">수정하기</a>
                </div>
            </form>
            <script>
                <%if(cpt){%>
                    commentz.style.visibility = "visible";
                <%}else{%>
                    commentz.style.visibility = "hidden";
                <%}%>
            </script>
            <script>
                <%if(uid==row.writer && !row.coments){%>
                    u_del.style.visibility = "visible";
                    u_alt.style.visibility = "visible";
                <%}else{%>
                    u_del.style.visibility = "hidden";
                    u_alt.style.visibility = "hidden";
                <%}%>
            </script>
        </div>
    </div>
</section>
<%include includes/footer.ejs%>